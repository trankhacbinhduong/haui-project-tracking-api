generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique @db.VarChar(255)
  name        String  @db.VarChar(55)
  password    String  @db.VarChar(255)
  studentCode String? @unique @map("student_code") @db.VarChar(10)
  role        Role    @default(user)

  classes        Class[]
  usersOnClasses UsersOnClasses[]

  @@map("user")
}

model Class {
  id          Int       @id @default(autoincrement())
  code        String    @unique @db.VarChar(20)
  name        String    @db.VarChar(255)
  description String?   @db.VarChar(255)
  teacherId   Int?      @map("teacher_id")
  startDate   DateTime  @map("start_date") @db.Date
  endDate     DateTime  @map("end_date") @db.Date
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt

  teacher        User?            @relation(fields: [teacherId], references: [id])
  usersOnClasses UsersOnClasses[]

  @@map("class")
}

model UsersOnClasses {
  userId    Int @map("user_id")
  classId   Int @map("class_id")
  projectId Int @unique @map("project_id")

  user    User    @relation(fields: [userId], references: [id])
  class   Class   @relation(fields: [classId], references: [id])
  project Project @relation(fields: [projectId], references: [id])

  @@id([userId, classId])
  @@map("users_on_classes")
}

model Project {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(255)
  description String? @db.VarChar(255)

  usersOnClasses UsersOnClasses?
  projectSources ProjectSource[]

  @@map("project")
}

model ProjectSource {
  id          Int        @id @default(autoincrement())
  name        String     @db.VarChar(255)
  description String?    @db.VarChar(255)
  path        String     @db.VarChar(255)
  type        SourceType @default(code)
  projectId   Int        @map("project_id")

  project Project @relation(fields: [projectId], references: [id])

  @@map("project_source")
}

model Document {
  id          Int     @id @default(autoincrement())
  name        String  @db.VarChar(255)
  description String? @db.VarChar(255)
  path        String  @db.VarChar(255)
  schoolYear  Int     @map("school_year") @db.Year

  @@map("document")
}

enum Role {
  user
  admin
}

enum SourceType {
  report
  code
}
